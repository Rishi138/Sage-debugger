{
  "name": "sage",
  "displayName": "Sage",
  "description": "AI coding assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "media/icon.png",
          "id": "sageView",
          "title": "Sage"
        }
      ]
    },
    "views": {
      "sageView": [
        {
          "icon": "media/icon.png",
          "type": "webview",
          "id": "sage.mainView",
          "name": "Sage Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "sage.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "sage.focusMainView",
        "title": "Focus Sage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0"
  }
}
